{
    "defaultSeverity": "error",
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "extends": [
        "tslint-config-airbnb",
        "tslint-config-prettier"
    ],
    "rules": {
        "type-literal-delimiter": false,
        "ter-indent": [
            true,
            4
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "no-console": [
            false
        ],
        "prettier": [
            true,
            {
                "tabWidth": 4,
                "bracketSpacing": true,
                "semi": true,
                "singleQuote": true
            }
        ]
    }
}